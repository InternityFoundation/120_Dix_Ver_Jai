<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentProfileActivity">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:src="@drawable/profilepic"
            />

        <TextView
            android:id="@+id/tvuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:hint="username"
            android:padding="8dp"
            android:layout_centerHorizontal="true"

             />

        <TextView
            android:id="@+id/tvemail"
            android:layout_below="@id/tvuser"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="email" />
        <TextView
            android:id="@+id/tvphone"
            android:layout_below="@id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:hint="phone" />
        <TextView
            android:id="@+id/tvavail"
            android:layout_below="@id/tvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:hint="available(part/full time)" />
        <TextView
            android:id="@+id/tvgob"
            android:layout_below="@id/tvavail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:hint="gender(baby)" />
        <TextView
            android:id="@+id/tvaddress"
            android:layout_below="@id/tvgob"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="address" />

        <TextView
            android:id="@+id/tvrate"
            android:layout_below="@+id/tvaddress"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="rate/hr" />

        <TextView
            android:id="@+id/tvzip"
            android:layout_below="@id/tvrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:hint="zipcode"/>
        <TextView
            android:id="@+id/tvdesc"
            android:layout_below="@id/tvzip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:hint="description" />




</RelativeLayout>