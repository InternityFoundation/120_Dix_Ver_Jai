<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/btn_bg_yellow"
    android:paddingVertical="4dp"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/profilepic"
        android:id="@+id/profilePicture"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/profilePicture"
        android:id="@+id/doctorName"
        android:layout_centerHorizontal="true"
        android:text="babysitterName"
        android:gravity="center"
        android:padding="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorGrayGreen"
        android:textSize="28dp"
        android:id="@+id/permanentAddress"
        android:layout_centerHorizontal="true"
        android:text="permanentAddress"
        android:gravity="center"
        android:padding="4dp"
        android:layout_below="@+id/doctorName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorLightBlue"
        android:textSize="24dp"
        android:id="@+id/phoneNumber"
        android:layout_centerHorizontal="true"
        android:text="phoneNumber"
        android:gravity="center"
        android:padding="4dp"
        android:layout_below="@+id/permanentAddress"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="4/5 star based on user reviews."/>
</RelativeLayout>